---
import { ContactForm } from "./components/contact-form";
import Layout from "../Layout.astro";
---

<Layout>
  <div class="flex flex-col md:flex-row md:justify-around md:my-8 w-full">
    <div class="w-fit self-center md:self-start">
      <h1
        class="scroll-m-20 text-4xl font-extrabold tracking-tight lg:text-5xl text-start"
      >
        Contact Us
      </h1>
      <p class="leading-7 [&:not(:first-child)]:mt-6">
        Feel free to reach out to us!
      </p>
    </div>
    <div class="mt-8 w-fit self-center md:self-start">
      <ContactForm />
    </div>
  </div>
</Layout>
